
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a href="/student/create">Create</a>

@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cgpa</th>
            <th>Dob</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Cgpa</td>
                <td>@item.Dob</td>
                <td>
                    <a href="/student/edit/@item.Id">Edit</a>
                </td>
            </tr>
        }
    </table>
}

else { 
    <h5 class="text-danger"> No Data Found</h5>
}

